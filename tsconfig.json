{
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "strict": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts", "node_modules/**/*"]
}
